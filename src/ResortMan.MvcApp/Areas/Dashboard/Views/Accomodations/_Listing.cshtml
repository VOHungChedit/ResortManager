@model AccomodationsListingModel
@if(Model != null && Model.Accomodations != null && Model.Accomodations.Count() > 0)
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Description</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody >
            @foreach (var accomodation in Model.Accomodations)
            {
                <tr>
                    
                    <td>
                        @accomodation.Name
                    </td>
                    <td>
                        @accomodation.Description
                    </td>
                    <td>
                        <button data-href="@Url.Action("Action", new { Id = accomodation.Id })" type="button" class="data-btn btn btn-primary" data-bs-toggle="modal" data-bs-target="#actionModal"><i class="fas fa-pen mr-1"></i> Edit</button>
                        <button data-href="@Url.Action("Delete", new { Id = accomodation.Id })" type="button" class="data-btn btn btn-danger" data-bs-toggle="modal" data-bs-target="#actionModal"><i class="fas fa-trash-alt mr-1"></i> Delete</button>
                        
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else{
<div class="alert alert-warning" role="alert">
    Sorry! No records exist.
</div>
}